pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t ideaconsult/ambit-mariadb-test:release jenkins/ambit-mariadb'
                sh 'docker build -t ideaconsult/ambit-tomcat-test:release jenkins/ambit-tomcat'
            }
        }
        stage('Publish') {
            when {
                branch 'master'
            }
            steps {
                withDockerRegistry([credentialsId: 'dockerhub-idea', url: '']) {
                    sh 'docker push ideaconsult/ambit-mariadb-test:release'
                    sh 'docker push ideaconsult/ambit-tomcat-test:release'
                }
            }
        }
    }
}

